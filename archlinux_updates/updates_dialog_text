#!/bin/sh
answ(){
	printf "Update?: "
	read ans
	ans="${ans//$'\n'/ }"
	if [[ "$ans" == "y" || $ans == "yes" ]];then
		sudo pacman -Syu --noconfirm
		main
	else
		main
	fi
}
main(){
	clear
	printf "Updates available:\n\n"
	updates_news
	yay -Pw
	sudo checkupdates
	exit_code=$?
	if [ $exit_code -eq 2 ];then
		return 0
	fi
	answ
}
trap main INT
while true;do
	main
	sleep 600 &
	wait $!
done
