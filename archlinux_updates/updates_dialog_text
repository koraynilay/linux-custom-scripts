#!/bin/sh
answ(){
	printf "Update?: "
	read ans
	ans="${ans//$'\n'/ }"
	if [[ "$ans" == "y" || $ans == "yes" ]];then
		sudo pacman -Syu
		main
	else
		main
	fi
}
main(){
	clear
	printf "Updates available:\n\n"
	checkupdates
	exit_code=$?
	if [ $exit_code -eq 2 ];then
		return 0
	fi
	answ
}
while true;do
	main
	sleep 3600
done
