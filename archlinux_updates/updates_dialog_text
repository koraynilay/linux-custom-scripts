#!/bin/sh
update_command='yay'

answ(){
	printf "Update?: "
	read ans
	ans="${ans//$'\n'/ }"
	if [[ "$ans" == "y" || $ans == "yes" ]];then
		$update_command
	else
		main
	fi
}
main(){
	clear
	printf "Updates available:\n\n"
	updates_news
	yay -Pw
	checkupdates
	printf "AUR:\n"
	yay -Qu
	exit_code=$?
	if [ $exit_code -eq 2 ];then
		return 0
	fi
	answ
}
trap main INT
while true;do
	main
	sleep 600 &
	wait $!
done
