#!/bin/sh
update_command='paru'

answ(){
	printf "Update?: "
	read ans
	ans="${ans//$'\n'/ }"
	if [[ "$ans" == "y" || "$ans" == "yes" ]];then
		$update_command
	else
		main
	fi
}
main(){
	clear
	printf "Updates available:\n\n"
	#updates_news
	$update_command -Pw
	#checkupdates
	#printf "AUR:\n"
	$update_command -Qu
	exit_code=$?
	printf "Check AUR mantaining pkgs? [y/n]: "
	read pp
	if [[ "$pp" == "y" || "$pp" == "yes" ]];then
		aur_pkgs_notif
	fi
	if [ $exit_code -eq 2 ];then
		return 0
	fi
	answ
}
trap main INT
while true;do
	main
	sleep 600 &
	wait $!
done
