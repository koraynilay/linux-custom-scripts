#!/bin/sh
opt=$1
h="/home/koraynilay"
def="/disks/C/Users/User/AppData/Local/Google/Chrome/User Data/Default"
scu="/disks/C/Users/User/AppData/Local/Google/Chrome/User Data/Profile 5"
hdef="$h/.config/google-chrome/Default"
hscu="$h/.config/google-chrome/Profile 1"
bdir="$h/bck_chrome_tabs"

if [ "$opt" = "start_pc" ];then
	cp "$hdef/Current Tabs" "$hdef/Current Session" "$bdir/"
	cp "$hscu/Current Tabs" "$hscu/Current Session" "$bdir/scuola/"
	touch "$bdir/bck_$(date +%Y-%m-%d_%H-%M-%S)"
	cp "$def/Current Tabs" "$def/Current Session" "$hdef/"
	cp "$scu/Current Tabs" "$scu/Current Session" "$hscu/"
elif [ "$opt" = "shut_pc" ];then
	cp "$def/Current Tabs" "$def/Current Session" "$bdir/win/"
	cp "$scu/Current Tabs" "$scu/Current Session" "$bdir/win/scuola/"
	touch "$bdir/win/bck_$(date +%Y-%m-%d_%H-%M-%S)"
	cp "$hdef/Current Tabs" "$hdef/Current Session" "$def/"
	cp "$hscu/Current Tabs" "$hscu/Current Session" "$scu/"
else
	printf "Usage: $0 [start_pc] [shut_pc]\n"
fi
dunstify -a chrome_tabs_keep "chrome_tabs_keep $1"
